{
  "name": "ci-server",
  "description": "Roles for a Continuous Integration server.",
  "json_class": "Chef::Role",
  "default_attributes": {
  },
  "override_attributes": {
    "jenkins": {
      "server": {
        "host": "jenkins.web-essentials.asia"
      },
      "http_proxy": {
        "variant": "apache2",
        "host_name": "jenkins.web-essentials.asia",
        "ssl": {
            "enabled": true,
            "redirect_http": true,
            "cert_path": "/etc/ssl/essentials/web-essentials.asia.crt",
            "key_path": "/etc/ssl/essentials/wildcard.web-essentials.asia.key"
        }
      }
    }
  },
  "chef_type": "role",
  "run_list": [
    "recipe[jenkins]",
    "recipe[jenkins::proxy_apache2]",
    "recipe[ant]"
  ],
  "env_run_lists": {
  }
}